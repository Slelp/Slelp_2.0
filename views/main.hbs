<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">

    <link rel="stylesheet" href="/stylesheets/main.css">
    <link href="https://fonts.googleapis.com/css?family=Droid+Sans|Pacifico|Rokkitt" rel="stylesheet">
    <title>Slelp</title>
  </head>
  <body>
    <header>
      <div class="user-info">
        <form class="form-logo" action="/main" method="post">
          <button>
            <input type="text" style="display: none;" name="username" value="{{username}}">
            <input type="text" style="display: none;" name="password" value="{{password}}">
            <div id="logo">
              <h1>Slelp</h1>
            </div>
          </button>
        </form>

        <div class="group">
          <h1>{{group_name}}</h1>
        </div>

      </div>

      <div id="add-search-container" class="mobileSearchContainer">
        <form class="form-help" action="/help" method="get">
          <button action="/help" method="get" class="add-help">
            <h1>Add Help +</h1>
          </button>
        </form>

        <form class="form-search" action="index.html" method="post">
          <button class="search">
            <img class="search-img" src="/images/search-128.png" alt="">
          </button>
        </form>

      </div>
    </header>

    <section>
      <div class="container">
        {{#each helps}}
        <form class="form-help-container" action="/qa/{{help_id}}" method="post">
          <button class="help-container">

            <div class="username-time">
              <div class="username">
                <h3>{{helpUser}}</h3>
              </div>

              <div class="timestamp">
                <h3>{{timestamp}}</h3>
              </div>
            </div>


            <div class="question-head">
              <h3>Q: {{qTitle}}</h3>
            </div>

            <div class="solutions-answerbtn">
              <h5>Solutions: {{solution}}</h5>
            </div>
          </button>
        </form>
        {{/each}}
      </div>
    </section>

    <footer>
      <div class="foot">
        <a href="https://github.com/Slelp/slelp"><h3>&copy;PFC, inc.</h3></a>
      </div>
    </footer>
  </body>
</html>
