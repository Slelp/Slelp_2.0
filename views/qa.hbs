<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="/stylesheets/qa.css">
    <link href="https://fonts.googleapis.com/css?family=Droid+Sans|Pacifico|Rokkitt" rel="stylesheet">
    <title>Slelp</title>
  </head>
  <body>
    <header>

      <div class="group-info">
        <a href="/helps">
            <div id="logo" class="form-logo">
              <h1>Slelp</h1>
            </div>
          </a>


        <div class="group">
          <h1>{{group_name}}</h1>
        </div>

      </div>

      <div id="user-time-question">
        <div class="user-time">
          <div class="username">
            <h3>{{question.username}}</h3>
          </div>
          <div class="time">
            <h3>{{question.readableTime}}</h3>
          </div>
        </div>
        <div class="question">
          <h3>Q:</h3><h3>{{question.title}}</h3>
        </div>
      </div>
    </header>

    <section>
      <div class="container">
        <div class="question-description">
          <div class="help-description">
            <h3>{{question.description}}</h3>
          </div>

          <div class="description-links">
            <a class="link" href="{{question.link}}">
              <h3>< / ></h3>
            </a>
          </div>
        </div>

        <div class="solutions">
          <div class="solutions-header">
            <h3>Solutions</h3>
          </div>
          {{#each answers}}
          <div class="solution">
            <div class="solution-user user-time">
              <div class="solution-username username">
                <h3>{{username}}</h3>
              </div>
              <div class="solution-time time">
                <h3>{{readableTime}}</h3>
              </div>
            </div>

            <div class="solution-description">
              <div class="answer-description">
                <h3>{{answer}}</h3>
              </div>

              <div class="answer-links">
                <a class="link" href="{{link_1}}">
                  <h3>YouTube</h3>
                </a>
                <a class="link" href="{{link_2}}">
                  <h3>< / ></h3>
                </a>
              </div>
            </div>
          </div>
          {{/each}}

        </div>
      </div>

      <form class="form-float" action="/answer/{{question.help_id}}" method="get">
        <button class="float">
          <h1>Add Answer +</h1>
        </button>
      </form>

    </section>

    <footer>
      <div class="foot">
        <a href="https://github.com/Slelp/slelp"><h3>&copy;PFC, inc.</h3></a>
      </div>
    </footer>

  </body>
</html>
